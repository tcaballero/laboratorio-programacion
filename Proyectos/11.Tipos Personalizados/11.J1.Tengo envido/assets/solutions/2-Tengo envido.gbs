program {
  DecirSiTengoEnvido()
}

procedure DecirSiTengoEnvido() {
  paloDeLaCartaIzquierda := dameElPalo_(cartaActual())
  PasarASiguientePosición()
  paloDeLaCartaDerecha := dameElPalo_(cartaActual())
  IrAlSectorDeInformar()
  if (paloDeLaCartaIzquierda == paloDeLaCartaDerecha) 
       { DecirQueSÍTengoEnvido() } 
  else { DecirQueNOTengoEnvido() }
}

